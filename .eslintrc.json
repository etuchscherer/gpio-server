{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false
    }
  },
  "rules": {
    "semi": 2,
    "no-console": 0,
    "import/no-unresolved": 2,
    "import/named": 2,
    "quotes": [2, "single"],
    "indent": [2, 2],
    "no-unused-vars": [2],
    "filenames/match-regex": [2, "^[a-z-]+$"],
    "prefer-const": [2, {
      "destructuring": "all"
    }],
    "space-before-function-paren": [2, "never"]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "plugins": ["import", "filenames"],
  "ignorePatterns": ["public/javascripts", "build", "target", "mocha.json", "dist"]
}
